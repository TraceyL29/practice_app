<div class="container">
<%= render "shared/errormessages", obj: @student%>
  <div class="row justify-content-center">
    <div class="col-10">
    <%= form_with(model: @student, class: "shadow p-3 mb-3 bg-info rounded", local:true) do |f| %>
    <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 col-form-label text-light"%>
      <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter student name" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group row justify-content-md-center">
      <%= f.submit(@student.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
    </div>

    <% end %>
    </div>
  </div>
</div>
