<h1 class="text-center mt-4">list of students</h1>
<% @students.each do |f| %>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
  <div class="card text-center shadow p-3 mb-5 bg-white rounded">
    <div class="card-header font-italic">
      By <%= link_to f.name, f %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= link_to gravatar_for(f, size: 200), f %></h5>
      <p class="card-text"><%= pluralize(f.lists.count, "list", plural: "lists") %></p>
      <%= link_to 'View profile', f, class: 'btn btn-info'%>
      <%= link_to 'Edit profile', edit_student_path(f), class: 'btn btn-success'%>

    </div>
    <div class="card-footer text-muted">
      Joined <%= time_ago_in_words(f.created_at) %> ago
    </div>
  </div>
</div>
</div>
</div>
<%end%>
