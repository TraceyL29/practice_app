<div class="container">
<%= render 'shared/errormessages'%>
  <div class="row justify-content-center">
    <div class="col-10">
    <%= form_with(model: @list,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
     <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label text-light"%>
    <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: 'Title'%>
      </div>
      </div>
      <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label text-light"%>
    <div class="col-sm-10">
    <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: 'Description'%>
      </div>
      </div>
    <div class="form-group row justify-content-md-center">
      <%= f.submit class: "btn btn-outline-light btn-lg"%>
    </div>
    <% end %>
    <div class="form-group row justify-content-md-center">
      <%= link_to '[Return to the list]', lists_path, class: 'text-info'%>
    </div>
  </div>
  </div>
</div>
