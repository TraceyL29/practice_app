

  <h1 class="text-center mt-4">Showing the list</h1>
  <% @list.each do |f| %>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
    <div class="card text-center shadow p-3 mb-5 bg-white rounded">
      <div class="card-header font-italic">
        By <%= f.student.name if f.student %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to f.title, list_path(f), class: 'text-success'%></h5>
        <p class="card-text"><%= truncate(f.description, length: 100) %></p>
        <%= link_to 'View', list_path(f), class: 'btn btn-info'%>
        <%= link_to 'Edit', edit_list_path(f), class: 'btn btn-success'%>
        <%= link_to 'Delete', list_path(f), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
      </div>
      <div class="card-footer text-muted">
        Created <%= time_ago_in_words(f.created_at) %> ago, updated <%= time_ago_in_words(f.updated_at) %> ago
      </div>
    </div>
  </div>
  </div>
  </div>
  <%end%>
